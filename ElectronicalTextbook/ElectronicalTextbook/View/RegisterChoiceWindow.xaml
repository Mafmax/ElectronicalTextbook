<Window x:Class="ElectronicalTextbook.View.RegisterChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicalTextbook.View"
        mc:Ignorable="d"
        Title="RegisterChoiceWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button x:Name="teacher" Grid.Row="0" FontSize="30" Content="Зарегистрировать учителя"></Button>
        <Button x:Name="student" Grid.Row="1" FontSize="30" Content="Зарегистрировать ученика"></Button>
        <Button x:Name="exit" Grid.Row="2" FontSize="30" Content="Вернуться"></Button>

    </Grid>
</Window>
